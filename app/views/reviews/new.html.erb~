<%= link_to 'My reviews', user_reviews_path(current_user.username), :class => 'btn btn-primary' %>

<p>
  <% if detailed_poster %>
    <%= image_tag(detailed_poster) %>
  <% end %>
  <h1><%= movie_title %></h1> 
</p>

<%= simple_form_for [current_user, @review], :url => { :action => 'create'}, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :movie_id %>
  <%= f.input :rating %>
  <%= f.input :comment %>
  <%= f.input :private, label: "Visibility",
  as: :radio_buttons, 
  collection: [["private", true], ["public", false]],
  checked: true %>
  
  <%= f.button :submit, 'Submit Review', :class => 'btn btn-primary' %> 
  <%= link_to "Cancel", user_reviews_path(current_user.username), :class => 'btn btn-default' %>
<% end %>