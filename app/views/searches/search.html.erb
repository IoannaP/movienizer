<!-- table with results from search query -->

  <% if @movies_part.size > 0 %>
    <table class="table">
      <% if @movies_part %>
    	  <% @movies_part.each do |movie| %>
    	    <tr>
    	      <td><%= image_tag(movie['posters']['thumbnail'], size: "61x91") %></td>
    	      <td><strong>
    	      <% if movie.key?('alternate_ids') && movie['alternate_ids'].key?('imdb') %>
    	      	<!-- uncomment this to link the movies to imdb site -->
              <!--<%= link_to movie['title'], "http://www.imdb.com/title/tt" +  movie['alternate_ids']['imdb'], :target => '_blank' %> -->
              <!-- this link every movie with the specified movie page that correspond to it -->
              <%= link_to movie['title'], movie_path(:movie_id => movie['id'], :id => 'show') %>
    	      <% else %>
    	      	<%= movie['title'] %>
    	      <% end %>
    	      </strong></td>
    	      <td><%= movie['year'] %></td>
    	      <td><%= movie['synopsis'] %></td>
    	    </tr>
        <% end %>
    	<% end %>
    </table>
  <% else %>
    <p>No movie was found for the query "<%= params[:q] %>" ! </p>
  <% end %>

<!-- Table with results from the box office query -->

<table class="table">
  <th>&nbsp;</th>
  <th>Title (Year) </th>

	<% @movies_box_office.each do |movie| %>
    <tr>
      <td><%= image_tag(movie['posters']['thumbnail'], size: "21x31") %></td>
      <td><strong>
      <% if movie.key?('alternate_ids') && movie['alternate_ids'].key?('imdb') %>
      	<!--<%= link_to movie['title'], "http://www.imdb.com/title/tt" +  movie['alternate_ids']['imdb'], :target => '_blank' %> -->
        <%= link_to movie['title'], movie_path(:movie_id => movie['id'], :id => 'show') %>
      	<%= "( #{movie['year'] } )" %>
      <% else %>
      	<%= movie['title'] + "( #{movie['year'] } )" %>
		      <% end %>
      </strong></td>
    </tr>
	<% end %>
</table>

