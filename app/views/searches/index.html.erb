<!-- form of the search bar -->
<%= form_tag searches_path, method: "get" do %>
	<%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag 'Search', :name => nil %>
<% end %>

