<!DOCTYPE html>
<html>
<head>
  <title>MovieUP</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body id="body" >

  <div class="container" id="container">
    <div class="row" >
      <div class="col-sm-7" id="left-nav">
	       <%= render_navigation :expand_all => true %>
           </div>
      <div class="col-sm-5" id="right-nav">
        <ul class="nav nav-pills">
          <li id="li1">
		<ul class="nav nav-pills">
            <%= form_tag search_path, :method => :get, :class => "navbar-form navbar-left" do %>
              <% if params[:q] %>
                <%= text_field_tag :q , params[:q].gsub('+', ' ') , placeholder: "Movies...", class: "form-control form-group" %>
              <% else %>
                <%= text_field_tag :q , params[:q], placeholder: "Movies...", class: "form-control form-group" %>
              <% end %>
              <%= submit_tag 'Search', :name => nil, :class => "btn btn-default" %>
            <% end %>
          
            <% unless user_signed_in? %>
            
             <!-- li class="dropdown open">
                <a class="btn btn" data-toggle="dropdown" href="#" id="dd">Sign in <b class="caret"></b></a>   
                <div class="dropdown-menu" id="ddmenu">
                  <form>
                    <input id="login-username" type="text" placeholder="Username/E-mail">
                    <input id="login-password" type="password" placeholder="Password">
                    <button class="btn btn-sm btn-primary btn-block" type="submit">Sign in</button>
                  </form>
                </div>
              </li> -->
          
            <%end%>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container" id="container2">
    <div class="row" >
      
      <!-- render box-office if it is in homepage, searches or movies path -->

      <% if ['welcome', 'searches', 'movies'].include?(params[:controller]) %>
        <div class="col-sm-7"><%= yield %></div>
        <%= render 'boxoffice/box_office' %>
      <% else %>
        <div class="col-sm-9"><%= yield %></div>      
      <% end %>

    </div>
  </div>
<%= render 'layouts/footer.html.erb' %>
</body>
</html>
