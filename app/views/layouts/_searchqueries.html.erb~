              <%= link_to movie['title'], movie_path(:movie_id => movie['id'], :id => 'show') %>
     <% else %>
     <%= movie['title'] style="margin-left:50%;" %>
     <% end %>
     </strong></td>
     <td><%= movie['year'] %></td>
     <td><%= movie['synopsis'] %></td>
     </tr>
        <% end %>
     <% end %>
