<%= link_to 'My lists', new_user_list_path(current_user.username), :class => 'btn btn-primary' %>

<%= simple_form_for [current_user, @list], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :private, label: "Visibility",
  as: :radio_buttons, 
  collection: [["private", true], ["public", false]],
  checked: true %>
  
  <%= f.button :submit, :class => 'btn btn-primary' %> 

<% end %>