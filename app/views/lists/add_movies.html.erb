<div class="col-md-5">

<%= link_to 'My lists', user_lists_path(current_user.username), :class => 'btn btn-primary', :id => 'mylist' %>


 <%= simple_form_for [current_user, list, @pair] do |f| %>

  <%= f.input :movie_id, input_html: { class: "input_field" } %>

  <%= f.button :submit, "Submit", class: 'btn btn-primary' %> 
  <%= link_to "Cancel", user_lists_path(current_user.username), class: 'btn btn-default' %>
<% end %>
</div>