<%= simple_form_for [current_user, list], :url => { :action => 'update'},  :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :private, label: "Visibility",
  as: :radio_buttons, 
  collection: [["private", list.private], ["public", !list.private]],
  checked: true %>
  
  <%= f.button :submit, :class => 'btn btn-primary' %>  
  <%= link_to "Cancel", user_lists_path(current_user.username), :class => 'btn btn-default' %>
<% end %>