<h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= bootstrap_flash%>
  <% if current_user.provider == 'facebook' and !current_user.reset_password_token %>
      <p class="alert alert-warning"> You will need to set a password first! We sent you an email with the instructions.</p>
    <%else%>
    <% if current_user.provider == 'facebook' and current_user.reset_password_sent_at %>
    <p class="alert alert-warning"> Consider setting your password! We sent you an email with the instructions at <%=current_user.reset_password_sent_at%>.</p>
    <%else%>
    

  <div class="row">
  <div class="col-md-4">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    
    <div class="form-inputs">
      <%= f.input :username%>
      <%= f.input :first_name%>
      <%= f.input :last_name%>
    
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>
  </div>  
</div>
<%end%>

<%end%>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to cancel your account?" }, method: :delete %></p>

  <%= link_to "Back", :back %>


